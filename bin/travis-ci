#!/usr/bin/env bash

# This script builds MLton and runs regression tests
set -ev
cd "$(dirname "$0")"
cd ".."

echo "Building MLton with MLton..."
autoreconf -vfi
./configure --prefix=$PREFIX
make
if [ $? != 0 ] ; then
  echo "Build of MLton failed..."
fi

echo "Running regression tests..."
make check
if [ $? != 0 ] ; then
  echo "Some test(s) failed..."
fi
